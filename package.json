{
  "name": "new-bing-anywhere",
  "version": "3.0.0",
  "private": true,
  "description": "New Bing isn't just for Edge anymore. Anywhere you want",
  "homepage": "https://github.com/ha0z1/New-Bing-Anywhere",
  "repository": {
    "type": "git",
    "url": "https://github.com/ha0z1/New-Bing-Anywhere"
  },
  "license": "GPLv3",
  "author": "haozi",
  "workspaces": [
    "packages/*",
    "src/app",
    "global"
  ],
  "scripts": {
    "build": "bun run lint && bun run scripts/build.ts build",
    "copy": "rm -rf dist && cp -r public dist",
    "copy:soruce": "rsync -vhra . dist/source --include='**.gitignore' --exclude='/.git' --exclude='dist'  --filter=':- .gitignore' --delete-after",
    "copy:watch": "bun run copy -- --watch",
    "dev": "bun run lint && bun run scripts/build.ts dev",
    "lint": "bun run prettier && bun run lint:eslint && bun run lint:stylus",
    "lint:eslint": "eslint --ext .js,.ts ./src --fix --cache",
    "lint:stylus": "stylus-supremacy format '{src,global}/**/*.styl' --options ./stylus-supremacy.json --replace",
    "prepare": "husky install && bun run build",
    "prettier": "prettier --cache --write '.'",
    "prettier:watch": "onchange \"**/*\" -- prettier --cache --write --ignore-unknown --ignore-path .prettierignore {{changed}} > /dev/null 2>&1",
    "test": "bun run lint"
  },
  "dependencies": {
    "@ha0z1/extension-utils": "workspace:*",
    "@ha0z1/llama-apis": "workspace:*",
    "global": "workspace:*",
    "jquery": "^3.7.1",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/fs-extra": "^11.0.2",
    "@types/jquery": "^3.5.19",
    "@types/lodash-es": "^4.17.9",
    "@types/node": "^20.7.0",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/webextension-polyfill": "^0.10.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "copy-and-watch": "^0.1.6",
    "eslint": "^8.50.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.9",
    "husky": "^8.0.3",
    "md5-file": "^5.0.0",
    "onchange": "^7.1.0",
    "prettier": "^3.0.3",
    "rollup-plugin-copy": "^3.5.0",
    "sort-package-json": "^2.5.1",
    "stylus": "^0.60.0",
    "stylus-supremacy": "^2.17.5",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vite-plugin-imp": "^2.4.0"
  },
  "engines": {
    "bun": "^1.0.3"
  },
  "extensionName": "New Bing Anywhere (Bing Chat GPT-4)"
}
