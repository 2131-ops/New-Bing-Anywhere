:host {
  user-select: text /* 或者 auto */
}

.wrap {
  position: relative
  overflow-y: auto
  box-sizing: border-box
  padding: 8px 15px 18px
  min-height: 120px
  max-height: initial
  border-radius: 8px
  background: $background-balanced
  color: #333
  word-wrap: break-word
  word-break: break-word
  font-weight: 400
  font-size: 14px
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif
  line-height: 1.5
  transition: max-height 5s
  font-synthesis: none
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  -webkit-text-size-adjust: 100%

  main article {
    min-height: 60px
  }

  ul, ol {
    list-style: none
  }

  &.creative {
    background: $background-creative
  }

  &.balanced {
    background: $background-balanced
  }

  &.precise {
    background: $background-precise
  }

  a {
    color: #1a0dab
    text-decoration: none

    &:visited {
      color: #681da8
    }

    &:hover {
      text-decoration: underline
    }
  }

  hr {
    margin: 0.5em
    height: 0.5px
    border: 0px
    background-color: #dcdcdc
    pointer-events: none
  }
}

[color-scheme='dark'] {
  border: 0.5px solid #3c4043
  background: #202124
  color: #fff

  hr {
    background-color: #2b2b2c
  }

  [class*='nba-pure-button'] {
    color: #8ab4f8
  }

  a {
    color: #8ab4f8

    &:visited {
      color: #c58af9
    }

    &:hover {
      text-decoration: underline
    }
  }

  .more {
    a {
      background: #303134
    }
  }
}
