.btn {
  display: inline-flex
  justify-content: center
  align-items: center
  margin: 0
  padding: 0
  outline: none
  border: none
  border-radius: 8px
  background: none
  color: rgb(0 0 0 / 88%)
  font-size: 14px
  cursor: pointer

  &:visited {
    color: rgb(0 0 0 / 88%)
  }

  &:hover {
    color: #535bf2
  }

  &:focus {
    outline: none !important
  }
}
